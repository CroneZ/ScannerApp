<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainLabel1"
        android:layout_width="0dp"
        android:layout_height="97dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Welcome"
        android:textColor="#000000"
        android:textSize="80sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/mainLabel2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mainLabel2"
        android:layout_width="302dp"
        android:layout_height="66dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="make a new entry by"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/photoBtn"
        app:layout_constraintEnd_toEndOf="@+id/mainLabel1"
        app:layout_constraintStart_toStartOf="@+id/mainLabel1" />

    <Button
        android:id="@+id/photoBtn"
        android:layout_width="231dp"
        android:layout_height="72dp"
        android:text="Taking a Photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mainLabel2"
        app:layout_constraintStart_toStartOf="@+id/mainLabel2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/galleryBtn"
        android:layout_width="231dp"
        android:layout_height="71dp"
        android:layout_marginTop="46dp"
        android:text="Choose from Gallery"
        app:layout_constraintEnd_toEndOf="@+id/photoBtn"
        app:layout_constraintStart_toStartOf="@+id/photoBtn"
        app:layout_constraintTop_toBottomOf="@+id/photoBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>