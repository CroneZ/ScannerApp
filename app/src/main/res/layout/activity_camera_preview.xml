<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraPreview">

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="377dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="@+id/typeLabel"
        app:layout_constraintTop_toBottomOf="@+id/typeLabel" />

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="222dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="New Document"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idField"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Example: PX1009-1234"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/idLabel"
        app:layout_constraintTop_toBottomOf="@+id/idLabel" />

    <TextView
        android:id="@+id/typeLabel"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Type:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/titleLabel"
        app:layout_constraintTop_toBottomOf="@+id/titleLabel" />

    <TextView
        android:id="@+id/idLabel"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:text="ID No:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/typeSpinner"
        app:layout_constraintTop_toBottomOf="@+id/typeSpinner" />

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:text="Invoice Date"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/idField"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idField"
        app:layout_constraintTop_toBottomOf="@+id/idField" />

    <EditText
        android:id="@+id/dateField"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/dateLabel"
        app:layout_constraintTop_toBottomOf="@+id/dateLabel" />

    <Button
        android:id="@+id/calendarBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Choose"
        app:layout_constraintEnd_toEndOf="@+id/dateLabel"
        app:layout_constraintStart_toEndOf="@+id/dateField"
        app:layout_constraintTop_toTopOf="@+id/dateField" />

    <TextView
        android:id="@+id/supplierLabel"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:text="Supplier"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dateField"
        app:layout_constraintTop_toBottomOf="@+id/dateField" />

    <Spinner
        android:id="@+id/supplierSpinner"
        android:layout_width="377dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="@+id/supplierLabel"
        app:layout_constraintTop_toBottomOf="@+id/supplierLabel" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/supplierSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>